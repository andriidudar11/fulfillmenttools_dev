{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "lib": ["es2020"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "types": ["node"],
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
